# ── Firebase (Google Auth) ────────────────────────────────────
# Get from Firebase Console → Project Settings → Service Accounts → Generate new private key
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
# Paste the private key exactly — newlines as \n
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nXXXXX\n-----END PRIVATE KEY-----\n"

# ── Database ──────────────────────────────────────────────────
DATABASE_URL="postgresql://postgres:password@localhost:5432/zeroone"

# ── Security ──────────────────────────────────────────────────
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="change-me-in-production"
ENCRYPTION_KEY="change-me-in-production-32-chars"

# ── Server ────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development
CORS_ORIGIN="http://localhost:3000"

# ── Docker ────────────────────────────────────────────────────
DOCKER_SOCKET="/var/run/docker.sock"
ZEROCLAW_IMAGE="ghcr.io/zeroclaw-labs/zeroclaw:latest"
DOCKER_NETWORK="zeroone-net"

# ── Traefik ───────────────────────────────────────────────────
TRAEFIK_DOMAIN="zeroonec.xyz"
